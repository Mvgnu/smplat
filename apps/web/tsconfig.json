{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@smplat/types": [
        "../../packages/types/src/index.ts"
      ],
      "@smplat/shared": [
        "../../packages/shared/src/index.ts"
      ]
    },
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
